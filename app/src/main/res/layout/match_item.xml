<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:id="@+id/marcador"
              android:background="@drawable/btn_home">
    <LinearLayout
            android:layout_margin="1dp"
            android:layout_width="145dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:gravity="center"
            >
        <EditText android:layout_width="150dp"
                  android:id="@+id/txtT1"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="35dp"
                  android:textAlignment="center"
                  android:textSize="15dp"
                  android:enabled="false"
                  android:fontFamily="monospace"
                  android:background="@drawable/btn_home"
                  android:textColor="#fff"
        />
        <TextView android:layout_width="150dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="35dp"
                  android:textAlignment="center"
                  android:textSize="20dp"
                  android:id="@+id/lblscore1"
                  android:fontFamily="monospace"
                  android:textColor="#fff"
        />

    </LinearLayout>
    <LinearLayout
            android:layout_margin="3.5dp"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center">
        <EditText android:layout_width="100dp"
                  android:id="@+id/txtDate"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="35dp"
                  android:textAlignment="center"
                  android:textSize="15dp"
                  android:enabled="false"
                  android:fontFamily="monospace"
                  android:background="@drawable/btn_home"
                  android:textColor="#fff"
                  android:backgroundTint="@color/blueSky"
        />

    </LinearLayout>
    <LinearLayout
            android:layout_margin="1dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_width="145dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="0"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:gravity="center">
        <EditText android:layout_width="150dp"
                  android:id="@+id/txtT2"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="35dp"
                  android:textAlignment="center"
                  android:textSize="15dp"
                  android:background="@drawable/btn_home"
                  android:enabled="false"
                  android:fontFamily="monospace"
                  android:textColor="#fff"
        />
        <TextView android:layout_width="150dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="35dp"
                  android:textAlignment="center"
                  android:textSize="20dp"
                  android:id="@+id/lblscore2"
                  android:fontFamily="monospace"
                  android:textColor="#fff"
        />
    </LinearLayout>


</LinearLayout>