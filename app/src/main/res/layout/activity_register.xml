<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register"
        android:orientation="vertical"
        android:background="@drawable/back"
>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:rowCount="5"
            android:columnCount="1"
            android:useDefaultMargins="true">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_rowSpan="2" android:layout_columnSpan="1" android:layout_margin="5dp">
            <TextView
                    android:id="@+id/lblNombre"
                    android:layout_height="25dp"
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:text="Nombre:"
                    android:textColor="#fff"/>
            <EditText
                    android:id="@+id/name"
                    android:layout_width="275dp"
                    android:layout_height="60dp"
                    android:textColor="#fff"/>
        </LinearLayout>

        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_rowSpan="2" android:layout_columnSpan="1" android:layout_margin="5dp">
            <TextView
                    android:id="@+id/lbluser"
                    android:layout_height="25dp"
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:text="Usuario:"
                    android:textColor="#fff"/>
            <EditText
                    android:id="@+id/username"
                    android:layout_width="275dp"
                    android:layout_height="60dp"
                    android:textColor="#fff"/>
        </LinearLayout>

        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_rowSpan="3" android:layout_columnSpan="1" android:layout_margin="5dp">
        <TextView
                android:id="@+id/lblPass"
                android:layout_height="25dp"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:text="Contraseña:"
                android:textColor="#fff"/>
        <EditText
                android:id="@+id/pass"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:textColor="#fff"/>
    </LinearLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_rowSpan="3" android:layout_columnSpan="1" android:layout_margin="5dp">
            <TextView
                    android:id="@+id/lblEmail"
                    android:layout_height="25dp"
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:text="Email:"
                    android:textColor="#fff"/>
            <EditText
                    android:id="@+id/email"
                    android:layout_width="275dp"
                    android:layout_height="60dp"
                    android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_gravity="center_horizontal" android:layout_rowSpan="5">
            <Button
                    android:id="@+id/btnSend"
                    android:layout_height="50dp"
                    android:layout_width="137.5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Registrarse"
                    android:textColor="#fff"
                    android:background="@drawable/btn_reg"/>
            <LinearLayout android:orientation="horizontal" android:layout_margin="10dp" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="300dp" android:layout_height="25dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="¿Ya tienes Cuenta?"
                          android:textColor="#fff"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:text="Inicia Sesion"
                          android:id="@+id/lblBack"
                          android:textColor="@color/blueSky"/>
            </LinearLayout>
        </LinearLayout>
    </GridLayout>

</RelativeLayout>